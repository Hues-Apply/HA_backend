# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-make-it-long-and-random
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/huesapply_db

# Google OAuth Settings
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email Settings (if using email functionality)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Settings (for caching)
REDIS_URL=redis://localhost:6379/0

# AWS Settings (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# API Settings
API_VERSION=v1
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=/var/log/huesapply/django.log

# Monitoring Settings
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# Development Settings (set to False in production)
DEVELOPMENT_MODE=False
